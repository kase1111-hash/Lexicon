# Linguistic Stratigraphy - Environment Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# Database Configuration
# =============================================================================

# Neo4j Graph Database
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_secure_password_here

# PostgreSQL
POSTGRES_DB=linguistic_stratigraphy
POSTGRES_USER=ls_user
POSTGRES_PASSWORD=your_secure_password_here

# Minio (S3-compatible storage for Milvus)
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=your_secure_password_here

# =============================================================================
# API Configuration
# =============================================================================

# API authentication key (leave empty to disable)
API_KEY=

# =============================================================================
# Logging Configuration
# =============================================================================

# Global logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format: "text" for development, "json" for production
LOG_FORMAT=text

# Optional log file path (leave empty for stdout only)
LOG_FILE=

# Component-specific log levels (override global level)
API_LOG_LEVEL=INFO
PIPELINE_LOG_LEVEL=INFO
DB_LOG_LEVEL=WARNING

# Slow request threshold in milliseconds (for performance warnings)
SLOW_REQUEST_THRESHOLD_MS=1000

# =============================================================================
# Error Tracking Configuration
# =============================================================================

# Sentry DSN for error tracking (leave empty to disable)
# Get your DSN from https://sentry.io/
SENTRY_DSN=

# Environment name for Sentry (development, staging, production)
ENVIRONMENT=development

# Application version for Sentry releases
APP_VERSION=0.1.0

# Elasticsearch hosts for centralized logging (comma-separated)
# Example: http://localhost:9200,http://localhost:9201
ELASTICSEARCH_HOSTS=

# Elasticsearch Cloud ID (alternative to hosts for Elastic Cloud)
ELASTICSEARCH_CLOUD_ID=

# Elasticsearch API key for authentication
ELASTICSEARCH_API_KEY=

# =============================================================================
# Airflow Configuration
# =============================================================================

# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
AIRFLOW_FERNET_KEY=

# Secret key for Airflow webserver
AIRFLOW_SECRET_KEY=your_secret_key_here

# =============================================================================
# External Services (Optional)
# =============================================================================

# Wiktionary API rate limit (milliseconds between requests)
WIKTIONARY_RATE_LIMIT_MS=100

# Sentence Transformers model
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2

# =============================================================================
# Development Settings
# =============================================================================

# Set to 'true' to enable debug mode (never in production!)
DEBUG=false

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
